<h1>Listing dishes</h1>

<table>
  <tr>
  	<th>Name</th>
    <th>Ingredients</th>
    <th>Grams</th>
    <th>Price</th>
    <th>Time</th>
    <th>Dish type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dishes.each do |dish| %>
  <tr>
  	<td><%= dish.name %></td>
    <td><%= dish.ingredients %></td>
    <td><%= dish.grams %></td>
    <td><%= dish.price %></td>
    <td><%= dish.time %></td>
    <td><%= dish.dish_type %></td>
    <td><%= link_to 'Show', dish %></td>
    <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
    <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

