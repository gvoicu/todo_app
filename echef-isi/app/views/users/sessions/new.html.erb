<div class="row">
 <div class="span12">
    
    <!-- Login starts -->
    
    <div class="logreg">
       <div class="row">
          <div class="span12">
             <div class="logreg-page">
                <h3>Sign In to <span class="color">Admin Panel</span></h3>                        
                <hr />
                            <div class="form">
                              <!-- Login form (not working)-->
                              <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
                              		
                              	<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
								<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
								<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
                              
                                  <!-- Username -->
                                  <div class="control-group">
                                    <%= f.label 'Username', :class => "control-label" %>
                                    <div class="controls">
                                      <%= f.text_field :username, :class => "input-large", :id => "username" %>
                                    </div>
                                  </div>
                                  <!-- Password -->
                                  <div class="control-group">
                                    <%= f.label 'Password', :class => "control-label" %>
                                    <div class="controls">
                                      <%= f.password_field :password, :class => "input-large", :id => "password" %>
                                    </div>
                                  </div>
                                  <div class="control-group">
                                     <div class="controls">
                                     	<label class="checkbox"> <%= f.check_box :remember_me %> Remember me </label>
                                     </div>
                                  </div>                                                                               
                                  <!-- Buttons -->
                                  <div class="form-actions">
                                     <!-- Buttons -->
                                    <%= f.button "Sign in", :class => "btn", :type => "submit" %>
                                  </div>
                              <% end %>
                            </div>
             </div>
          </div>
       </div>
    </div>
    
    <!-- Login ends -->
    
 </div>
</div>
