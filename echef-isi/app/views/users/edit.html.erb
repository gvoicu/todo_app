<div class="row">
 <div class="span12">
    
    <!-- Login starts -->
    
    <div class="logreg">
       <div class="row">
          <div class="span12">
             <div class="logreg-page">
             	
             	<h3>Edit user</h3>
             	<hr/>
             	
<%= form_for(@user,:html => {:class => "form-horizontal"}) do |f| %>
	<div class="control-group">
  <%= f.label :username , :class => "control-label"  %>
  <div class="controls">
  <%= f.text_field :username , :class => "input-large" %>
  </div>
  </div>

	<div class="control-group">
  <%= f.label :name , :class => "control-label"  %>
  <div class="controls">
  <%= f.text_field :name , :class => "input-large" %>
  </div>
  </div>
  
  <div class="control-group">
  <%= f.label :email , :class => "control-label"  %>
  <div class="controls">
  <%= f.text_field :email , :class => "input-large" %>
  </div>
  </div>

	<div class="control-group">
  <%= f.label :password , :class => "control-label"  %>
  <div class="controls">
  <%= f.password_field :password , :class => "input-large" %>
  </div>
  </div>

	<div class="control-group">
  <%= f.label :password_confirmation , :class => "control-label"  %>
  <div class="controls">
  <%= f.password_field :password_confirmation , :class => "input-large" %>
  </div>
  </div>

	<div class="control-group">
  <%= f.label :u_type , :class => "control-label"  %>
  <div class="controls">
  	<%= select_tag :u_type, options_for_select({"Administrator" => "1", "Waiter" => "2", "Chef" => "3"}, @user.u_type) , :class => "input-large" %>
 	</div>
  </div>

  <%= hidden_field_tag "id", @user.id %>

  <br />

  <div class="form-actions">
    <%= f.button "Update", :class => "btn", :type => "submit" %>
  </div>
<% end %>

			</div>
          </div>
       </div>
    </div>
    
    <!-- Login ends -->
    
 </div>
</div>
